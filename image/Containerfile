FROM registry.fedoraproject.org/fedora-minimal@sha256:106df59118131c988eab289e542abd7cd9e3d42d79eabdf8976ba8f8131274c1

RUN microdnf -y upgrade
RUN microdnf -y install \
  python \
  git-core \
  golang \
  jq \
  krb5-devel \
  python3-wheel \
  libffi-devel \
  /usr/bin/pip \
  /usr/bin/poetry \
  /usr/bin/make \
  /usr/bin/tox

RUN curl \
  "https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip" \
  -o "awscliv2.zip" \
  && unzip -q awscliv2.zip \
  && ./aws/install \
  && rm -rf aws awscliv2.zip

ADD . /src

RUN mv /src/image/RH-IT-Root-CA.crt /etc/pki/ca-trust/source/anchors && update-ca-trust
ENV REQUESTS_CA_BUNDLE=/etc/pki/tls/certs/ca-bundle.crt

RUN \
  cd /src/glab && \
  make && \
  mv -v bin/glab /usr/local/bin/glab && \
  cd /src/tkn && \
  make bin/tkn && \
  mv -v bin/tkn /usr/local/bin/tkn && \
  go clean -r -cache -modcache

ENTRYPOINT ["/bin/bash", "-c"]
